<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="lab.oss.andrew.chooseandperish.MainActivity"
    android:id="@+id/mainLayout">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playerOne"
        android:hint="@string/vanity_url_edit" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playerTwo"
        android:layout_below="@id/playerOne"
        android:hint="@string/vanity_url_edit" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playerThree"
        android:layout_below="@id/playerTwo"
        android:hint="@string/vanity_url_edit" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playerFour"
        android:layout_below="@id/playerThree"
        android:hint="@string/vanity_url_edit" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/playerFour"
        android:text="@string/button_send"
        android:onClick="startWork" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDisplay"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="" />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtDisplay"
        android:layout_centerHorizontal="true"
        android:paddingTop="5dp"
        android:visibility="invisible"
        android:id="@+id/progress_bar" />
</RelativeLayout>
